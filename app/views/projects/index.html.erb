<h1>Projects List</h1>
<%= link_to 'New Project', new_project_path %>
<br><br/>
<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
  </tr>

  <% @projects.each do |project| %>
    <tr>
      <td><%= project.title %></td>
      <td><%= project.description %></td>
      <td><%= link_to 'View', project_path(project) %></td>
      <td><%= link_to 'Update', edit_project_path(project) %></td>
      <td><%= link_to 'Remove', project_path(project),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
